<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.0">
    <title>Directores</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #343a40;
        }

        .navbar {
            background-color: #343a40;
        }

        .card-horizontal {
            display: flex;
            flex-direction: row;
        }

        .card-img-top {
            width: 200px;
            height: auto;
        }

        .card-body {
            flex: 1;
            padding-left: 15px;
        }
    </style>
</head>

<body>
<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="text-white">Directores</h1>
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
            </li>
            <li class="page-item active" aria-current="page"></li>
            </li>
            <li class="page-item"><a class="page-link" href="/">Volver al index</a></li>
            <li class="page-item"><a class="page-link" href="/peliculas">Ir a películas</a></li>
            <li class="page-item">
            </li>
        </ul>
    </nav>
    <div class="mb-4">
        <a href="/directores/update_directores" class="btn btn-primary mr-2">Modificar director</a>
        <a href="/directores/delete_director" class="btn btn-danger mr-2">Eliminar director</a>
        <a href="/directores/insert_directores" class="btn btn-success">Insertar director</a>
    </div>

    <div class="row mt-3">
        <% directores.forEach(director => { %>
            <div class="col-lg-12 mb-4">
                <div class="card card-horizontal">
                    <img src="<%= director.Imagen %>" class="card-img-top" alt="<%= director.Nombre %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= director.Nombre %></h5>
                        <p class="card-text">Nacionalidad: <%= director.Nacionalidad %></p>
                        <p class="card-text">Género: <%= director.Género %></p>
                        <p class="card-text">Descripción: <%= director.Descripción %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
