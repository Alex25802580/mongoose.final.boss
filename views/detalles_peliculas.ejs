<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles de Película</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #343a40;
            color: white;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background-color: #212529;
            color: white;
        }

        .card-img-top {
            width: 200px;
            height: auto;
        }

        .card-body {
            padding: 20px;
        }
    </style>
</head>

<body>

<div class="container">
    <div class="card">
        <% peliculas.forEach(pelicula => { %>
            <img src="<%= pelicula.imagen %>" class="card-img-top" alt="<%= pelicula.titulo %>">
            <div class="card-body">
                <h5 class="card-title">Nombre: <%= pelicula.nombre%></h5>
                <p class="card-text">Duración: <%= pelicula.duracion %></p>
                <p class="card-text">Premios: <%= pelicula.premios %></p>
                <p class="card-text">Descripción: <%= pelicula.descripcion %></p>
            </div>
        <% }); %>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>
